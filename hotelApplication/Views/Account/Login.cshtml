@model hotelApplication.ViewModels.LoginViewModel
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/Content/css/reset.css">
    <link rel="stylesheet" href="~/Content/css/slick.css">
    <link rel="stylesheet" href="~/Content/css/jquery.fancybox.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
</head>

    <header class="HeaderMain">
        <div class="container">
            <div class="HeaderElementContact">
                <div class="HeadLogo">
                    <a asp-controller="Main" asp-action="Example">
                        <img src="~/Content/logo.png" alt="Image" class="logoH">

                    </a>
                </div>

                <div class="Contact">
                    <img src="~/Content/icon1.png" alt="Image" class="Icon">
                    <h3 class="Contact-title ">
                        Вышка
                    </h3>
                    <p class="Contact-text">
                        Астраханская обл., с. Вышка
                    </p>

                </div>
                <div class="Contact Contact-phone">
                    <img src="~/Content/icon2.png" alt="Image" class="Icon">
                    <h3 class="Contact-title">
                        +7 (926) 326-72-63
                    </h3>
                    <p class="Contact-text">
                        Телефон для связи
                    </p>

                </div>
                <div class="Contact Contact-mail">
                    <img src="~/Content/icon3.png" alt="Image" class="Icon">
                    <h3 class="Contact-title">
                        info@mail.ru
                    </h3>
                    <p class="Contact-text">
                        Напишите нам
                    </p>
                </div>
            </div>

            <nav class="menu">
                <ul class="menu__list">
                    <li><a class="btn btn-sm sign-up" asp-controller="Main" asp-action="Example">Главная</a></li>
                    <li><a class="btn btn-sm sign-up" asp-controller="Main" asp-action="house">Бронирование</a></li>
                    <li>
                        <div class="btn-group ">
                            <button class="btn btn-sm dropdown-toggle sign-up" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Услуги
                            </button>

                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item " asp-controller="Main" asp-action="events">Мероприятия</a></li>
                                <li><a class="dropdown-item " asp-controller="Main" asp-action="rent">Аренда техники</a></li>
                                <li><a class="dropdown-item " asp-controller="Main" asp-action="provider">Дополнительные услуги</a></li>
                            </ul>

                        </div>


                    </li>
                    <li><a class="btn btn-sm sign-up" href="#">О нас</a></li>
                    <li><a class="btn btn-sm sign-up" href="#">Контакты</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {

                        <li><p class="menu__list">@User.Identity.Name</p></li>
                        <li>
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <input type="submit" class="btn btn-sm sign-up" value="Выход" />

                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a class="btn btn-sm sign-up" asp-controller="Account" asp-action="Login">Войти</a></li>
                        <li><a class="btn btn-sm sign-up" asp-controller="Account" asp-action="Register">Зарегистрироваться</a></li>

                    }
                </ul>

            </nav>
        </div>
    </header>


    <div class="container">
        <div class="row">
            <div class="col">

            </div>
            <div class="col order-5">

            </div>
            <div class="col order-1">
                <form method="post" asp-controller="Account" asp-action="Login"
                      asp-route-returnUrl="@Model.ReturnUrl" class="form-horizontal">
                    <h2 class="container-title">Авторизация</h2>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email </label><br />
                        <div class="class=" col-md-10">
                            <input asp-for="Email" class="form-control" placeholder="Введите email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Пароль</label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" placeholder="Введите пароль" />
                            <span asp-validation-for="Password"></span>
                        </div><br />


                        <div class="class=" mb-3 form-check"">
                            <label asp-for="RememberMe" class="form-check-label">Запомнить</label><br />
                            <input asp-for="RememberMe" class="form-check-input" />
                        </div><br />


                        <div class="mb-3">
                            <div class="col-md-offset-2 col-xs-10">
                                <input type="submit" value="Войти" class="btn btn-primary " />
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
                

                   

              
